{
    "compilerOptions": {
        "composite": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react",
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "typeRoots": ["src/types", "node_modules/@types"]
    },
    "references": [
        {
            "path": "src/workers"
        }
    ],
    "include": ["src"],
    "exclude": ["node_modules", "src/workers"]
}
